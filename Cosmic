function drawPixelArt(art, x, y, w, h) {
    noStroke();
    for(var i = 0; i < art.length; i++) {
        for(var j = 0; j < art[i].length; j++) {
            for(var k = 0; k < colorsList.length; k++) {
                if(colorsList[k][0] === art[i][j]) {
                    fill(colorsList[k][1]);
                }
                if(art[i][j] === " ") {
                    noFill();
                }
            }
            rect(j * w + x, i * h + y, w, h);
        }
    }
}

