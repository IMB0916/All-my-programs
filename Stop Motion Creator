            strokeCap(ROUND);
            strokeWeight(backdropLines[i][4]);
            stroke(backdropLines[i][5]);
            line(backdropLines[i][0], backdropLines[i][1], backdropLines[i][2], backdropLines[i][3]);
    }
        
