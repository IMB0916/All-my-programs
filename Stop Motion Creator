        fill(0, 200, 0);
        rect(60, 450, 95, 70, 10);
        fill(0);
        textSize(20);
        text("Confirm", 107.5, 485);
        if(cursorCollide(60, 450, 95, 70)) {
            fill(0, 15);
            rect(60, 450, 95, 70, 10);
            overButton = true;
            if(clicked) {
                frames[selectedIdx].sound = selectedSound;
                selectedSound = 0;
                page = "maine";
            }
        }
        
    break;
    case "marker":
        
        image(backgroundWhenBoxOpen, 0, 0, width, height);
        fill(0, 100);
