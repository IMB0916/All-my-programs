                    overButton = true;
                    fill(255, 15);
                    rect(215, i * 40 + 137 + soundScroll, 285, 32);
                    if(clicked) {
                        selectedSound = i;
                    }
                }
            }
        }
        
        // slider
        soundSlider.draw();
        soundScroll = -((soundSlider.thing / 400) * (40 * (sounds.length - 10)));
        
        // button
