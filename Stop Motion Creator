            rect(460, 362, 60, 40, 5);
            overButton = true;
            if(clicked) {
                backdropLines = [];
            }
    }
        
        // redoes outline
        noFill();
        strokeWeight(5);
        stroke(200);
        rect(75, 75, 300, 300);
        noStroke();
    
