        textSize(25);
        
        // displays all the sounds
        for(var i in sounds) {
            if(soundScroll + i * 40 + 137 > 125 && soundScroll + i * 40 + 137 < 500) {
                
                if(selectedSound === i) {
                    fill(255, 15);
                    strokeWeight(2);
                    stroke(255);
                    rect(215, i * 40 + 137 + soundScroll, 285, 32);
                    noStroke();
                }
                
                fill(200);
                if(sounds[i].sound !== "no sound") {
                    image(icons.souund, 160, i * 40 + 137 + soundScroll, 40, 33.6);
                
                }
                
